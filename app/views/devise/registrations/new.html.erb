<div class="container">
  <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="signup-form mx-auto">
      <h2>Créer mon compte</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: 'control-label' } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "nouveau-mot-de-passe" },
                      label_html: { class: 'control-label' } %>
        </div>
        <div class="form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "nouveau-mot-de-passe" },
                      label_html: { class: 'control-label' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "M'enregistrer", class: 'btn btn-primary p-2' %>
        </div>
      <% end %>
      <%#= render "devise/registrations/form" %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
