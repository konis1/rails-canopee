<div class="plant-selector-background d-flex flex-column justify-content-center"
      data-controller="swiper">
  <div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 class="dark-green-title mt-4">Sélectionnez vos plantes</h1>
        </div>
        <div class="col-md-6">
    <span class="d-flex align-items-center mt-4">
        <h3 class="light-yellow-instruction ml-2">Glissez à droite si vous aimez</h3>
        <%= image_tag 'handswipper.jpg', alt: 'hand swipper', class:'medium-image'%>

        <%# <i class="fa-solid fa-hand-pointer fa-3x ml-2" style="color: #ffffff;"></i> %>
        <%# <i class="fa-solid fa-arrow-up-right-dots fa-3x" style="color: #ffffff;"></i> %>
    </span>
</div>

    </div>
</div>


  <div class="flex-grow-1 position-relative">
    <div class="swiper">
      <div class="swiper__content">
        <div class="swiper__card-cont">
          <% @garden_plants.reverse.each do |garden_plant| %>
            <%= render "swiper_card", garden_plant: garden_plant %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center w-100 position-fixed crush-btn-box">
    <%= link_to crush_path, class: "btn, btn-valider" do %>
      <span data-swiper-target="counter"></span>
    <% end %>
  </div>
</div>
